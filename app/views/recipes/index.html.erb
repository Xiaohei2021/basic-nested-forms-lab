<h1>All Available Recipes</h1>


<% @recipes.each do |recipe| %>
  <ul>
    <li><h5><%= link_to recipe.title, recipe_path(recipe) %><h5></li>
  </ul>
    <% recipe.ingredients.each do |ing| %>
      <ol>
        <li><%= ing.name %></li>
        <li><%= ing.quantity %></li>
      </ol>
    <% end %>

<% end %>

