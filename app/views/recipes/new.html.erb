<h1>Please enter your special Recipe</h1>

<%= form_for @recipe do |r| %>

    <%= r.label :title %><br>
    <%= r.text_field :title %><br>

    <%= r.fields_for :ingredients do |ing| %><br>
        <%= ing.label :name %><br>
        <%= ing.text_field :name %><br>

        <%= ing.label :quantity %><br>
        <%= ing.text_field :quantity %><br>
    <% end %>
    <br>

    <%= r.submit %>

<% end %>
